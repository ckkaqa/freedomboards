{% extends 'base.html.twig' %}

{% block body %}

  {{ form_start(messageForm) }}
    

<div class="container mt-5">
  <div class="card border-primary">
    <div class="card-header bg-primary text-white">
      <h5 class="card-title">Send a message to {{ user.username }}</h5>
    </div>
    <div class="card-body">
      <form>
        <div class="form-group">
          {{form_errors(messageForm)}}

          {{ form_widget(messageForm.message, {attr: {"class": "form-control", "rows": "5", "placeholder": "NOTE: This message will be sent to the user anonymously!"}}) }}
          {{ form_rest(messageForm)   }}
        </div>
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

   
  {{ form_end(messageForm) }}
{% endblock %}

